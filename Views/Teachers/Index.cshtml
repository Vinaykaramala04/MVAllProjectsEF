@model IEnumerable<CodefirstSchoolManagement.Models.Teacher>

@{
    ViewData["Title"] = "Teachers";
}

<h1>Teachers</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Teacher Name</th>
            <th>Subject</th>
            <th>Number of Students</th>
            <th>Student Names</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var teacher in Model)
        {
            <tr>
                <td>@teacher.Name</td>
                <td>@teacher.Subject</td>
                <td>@(teacher.Students?.Count() ?? 0)</td>
                <td>
                    @if (teacher.Students != null && teacher.Students.Any())
                    {
                        <ul>
                            @foreach (var student in teacher.Students)
                            {
                                <li>@student.Name</li>
                            }
                        </ul>
                    }
                    else
                    {
                        <em>No students</em>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@teacher.TeacherId">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@teacher.TeacherId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
